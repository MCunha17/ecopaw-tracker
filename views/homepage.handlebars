<!-- views/homepage.handlebars -->
<!DOCTYPE html>
<html>
<head>
  <title>Homepage</title>
</head>
<body>
  <h1>Welcome to the Homepage</h1>
  
  <div>
    <h2>Walking Tracker</h2>
    <p>Total Miles Walked: {{miles}}</p>
    
    <form action="/track-miles" method="POST">
      <label for="milesInput">Enter Miles Walked:</label>
      <input type="number" id="milesInput" name="miles" required>
      <button type="submit">Track Miles</button>
    </form>
  </div>
  
  <div>
    <h2>Points: {{points}}</h2>
    <!-- Add any other point-related information or functionality -->
  </div>

  <section class="home">
    {{#if loggedIn}}
      <h1 class="header">
          Welcome, {{user_name}}!
      </h1>
      <div class="tracker">
          <h2>
              Daily Activity Tracker
          </h2>
          <p>Let us know what your daily activity looks like so you can view your carbon footprint!</p>
          <button class="car-travel">I Traveled by Car</button>
          <button class="public-travel">I Used Public Transportation</button>
          <button class="bike-travel">I Used a Bike</button>
          <button class=""></button>
      </div>
      <div class="donation">
         {{#each donation.card as |donation|}}
           <!-- Render donation cards here -->
         {{/each}}
      </div>
    {{else}}
      <a href="/login">You must login first to view this page</a>
    {{/if}}
  </section>
</body>
</html>
